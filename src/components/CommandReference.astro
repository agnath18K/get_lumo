---
import CodeBlock from './CodeBlock.astro';

const commandCategories = [
  {
    title: "Basic Usage",
    icon: 'MagnifyingGlassIcon',
    description: "The simplest way to use Lumo is by asking questions in natural language.",
    commands: [
      {
        title: "Natural Language Queries",
        description: "Ask questions in plain English and get the exact terminal commands you need.",
        examples: [
          "lumo \"How do I find large files in Linux?\"",
          "lumo \"How to use grep with multiple patterns?\"",
          "lumo \"What's the difference between TCP and UDP?\"",
        ]
      },
      {
        title: "Command Line Options",
        description: "Basic command line options for Lumo.",
        examples: [
          "lumo --help",
          "lumo -h",
          "lumo --version",
          "lumo -v"
        ]
      }
    ]
  },
  {
    title: "Terminal Agent Mode",
    icon: 'CpuChipIcon',
    description: "Let Lumo CLI execute sequences of terminal commands to complete complex tasks.",
    commands: [
      {
        title: "Automated Terminal Tasks",
        description: "Execute a sequence of terminal commands as an agent.",
        examples: [
          "lumo auto:create a backup of my documents folder",
          "lumo agent:find all large files in the current directory and show their types",
          "lumo agent:set up a python virtual environment with flask and sqlalchemy",
          "lumo agent:monitor CPU and memory usage every 5 seconds"
        ]
      },
      {
        title: "Terminal Agent Commands",
        description: "Commands available in interactive terminal agent mode.",
        examples: [
          "run",
          "refine <prompt>",
          "add <command>",
          "edit <num>",
          "delete <num>",
          "move <num> <pos>",
          "help",
          "exit"
        ]
      }
    ]
  },
  {
    title: "Chat Mode",
    icon: 'ChatBubbleLeftRightIcon',
    description: "Have conversational interactions with Lumo.",
    commands: [
      {
        title: "Starting Chat",
        description: "Start or continue a conversation with Lumo.",
        examples: [
          "lumo chat",
          "lumo chat:Tell me about Linux file permissions",
          "lumo ask:What is the capital of France?"
        ]
      },
      {
        title: "Chat Commands",
        description: "Commands available in interactive chat mode.",
        examples: [
          "help",
          "clear",
          "history",
          "new",
          "list",
          "switch <num>",
          "delete <num>",
          "exit"
        ]
      }
    ]
  },
  {
    title: "System Commands",
    icon: 'ServerIcon',
    description: "Check system health and generate reports.",
    commands: [
      {
        title: "Health Checks",
        description: "Commands for checking system health.",
        examples: [
          "lumo health",
          "lumo system",
          "lumo health:memory",
          "lumo health:disk",
          "lumo health:cpu",
          "lumo health:network"
        ]
      },
      {
        title: "System Reports",
        description: "Generate detailed system reports.",
        examples: [
          "lumo report:performance",
          "lumo report:security",
          "lumo report:storage"
        ]
      },
      {
        title: "Shell Commands",
        description: "Execute shell commands directly.",
        examples: [
          "lumo lumo:ls -la",
          "lumo shell:find . -name \"*.go\" -type f"
        ]
      }
    ]
  },
  {
    title: "Pipe Support",
    icon: 'DocumentArrowDownIcon',
    description: "Pipe command outputs to Lumo for analysis.",
    commands: [
      {
        title: "Analyzing Output",
        description: "Analyze piped input from other commands.",
        examples: [
          "ls -la | lumo",
          "cat error.log | lumo",
          "ps aux | grep python | lumo",
          "dmesg | lumo"
        ]
      }
    ]
  },
  {
    title: "File Transfer",
    icon: 'ArrowsRightLeftIcon',
    description: "Transfer files between computers on your local network.",
    commands: [
      {
        title: "Server Mode",
        description: "Start a server to receive files.",
        examples: [
          "lumo connect --receive",
          "lumo connect --receive --port 9000",
          "lumo connect --receive --path /tmp"
        ]
      },
      {
        title: "Client Mode",
        description: "Connect to a peer to send files.",
        examples: [
          "lumo connect 192.168.1.5",
          "lumo connect 192.168.1.5:9000",
          "lumo connect 192.168.1.5 --path /tmp"
        ]
      }
    ]
  },
  {
    title: "Additional Features",
    icon: 'SparklesIcon',
    description: "Other useful features and commands.",
    commands: [
      {
        title: "Internet Speed Testing",
        description: "Test your internet connection speed.",
        examples: [
          "lumo speed",
          "lumo speed:download",
          "lumo speed:upload",
          "lumo \"check my internet speed\""
        ]
      },
      {
        title: "Clipboard Operations",
        description: "Manage clipboard content.",
        examples: [
          "lumo clipboard",
          "lumo clipboard \"Hello World\"",
          "lumo clipboard append \"More text\"",
          "lumo clipboard clear",
          "echo \"This is some text\" | lumo clipboard"
        ]
      },
      {
        title: "Magic Commands",
        description: "Fun terminal animations and commands.",
        examples: [
          "lumo magic:dance",
          "lumo magic:help"
        ]
      },
      {
        title: "Configuration",
        description: "Configure Lumo settings.",
        examples: [
          "lumo config:provider list",
          "lumo config:provider show",
          "lumo config:provider set openai",
          "lumo config:api set"
        ]
      }
    ]
  }
];
---

<section class="py-16 bg-gray-50 dark:bg-gray-950">
  <div class="container">
    <div class="text-center mb-12">
      <h2 class="section-title">Command Reference</h2>
      <p class="section-description">
        Explore the full range of commands available in Lumo.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
      {commandCategories.map(category => (
        <div class="card p-6 space-y-6">
          <div class="flex items-start gap-4">
            <div class="text-primary-500">
              <svg class="w-8 h-8" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                {category.icon === 'MagnifyingGlassIcon' && (
                  <path d="M21 21l-5.197-5.197m0 0A7.5 7.5 0 105.196 5.196a7.5 7.5 0 0010.607 10.607z" />
                )}
                {category.icon === 'CpuChipIcon' && (
                  <path d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V6.75a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 6.75v10.5a2.25 2.25 0 002.25 2.25zm.75-12h9v9h-9v-9z" />
                )}
                {category.icon === 'ChatBubbleLeftRightIcon' && (
                  <path d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                )}
                {category.icon === 'ServerIcon' && (
                  <path d="M21.75 17.25v-.228a4.5 4.5 0 00-.12-1.03l-2.268-9.64a3.375 3.375 0 00-3.285-2.602H7.923a3.375 3.375 0 00-3.285 2.602l-2.268 9.64a4.5 4.5 0 00-.12 1.03v.228m19.5 0a3 3 0 01-3 3H5.25a3 3 0 01-3-3m19.5 0a3 3 0 00-3-3H5.25a3 3 0 00-3 3m16.5 0h.008v.008h-.008v-.008zm-3 0h.008v.008h-.008v-.008z" />
                )}
                {category.icon === 'DocumentArrowDownIcon' && (
                  <path d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m6.75 12l-3-3m0 0l-3 3m3-3v6m-1.5-15H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                )}
                {category.icon === 'SparklesIcon' && (
                  <path d="M9.813 15.904L9 18.75l-.813-2.846a4.5 4.5 0 00-3.09-3.09L2.25 12l2.846-.813a4.5 4.5 0 003.09-3.09L9 5.25l.813 2.846a4.5 4.5 0 003.09 3.09L15.75 12l-2.846.813a4.5 4.5 0 00-3.09 3.09zM18.259 8.715L18 9.75l-.259-1.035a3.375 3.375 0 00-2.455-2.456L14.25 6l1.036-.259a3.375 3.375 0 002.455-2.456L18 2.25l.259 1.035a3.375 3.375 0 002.456 2.456L21.75 6l-1.035.259a3.375 3.375 0 00-2.456 2.456zM16.894 20.567L16.5 21.75l-.394-1.183a2.25 2.25 0 00-1.423-1.423L13.5 18.75l1.183-.394a2.25 2.25 0 001.423-1.423l.394-1.183.394 1.183a2.25 2.25 0 001.423 1.423l1.183.394-1.183.394a2.25 2.25 0 00-1.423 1.423z" />
                )}
                {category.icon === 'ArrowsRightLeftIcon' && (
                  <path d="M7.5 21L3 16.5m0 0L7.5 12M3 16.5h13.5m0-13.5L21 7.5m0 0L16.5 12M21 7.5H7.5" />
                )}
              </svg>
            </div>
            <div>
              <h3 class="text-xl font-bold">{category.title}</h3>
              <p class="text-gray-600 dark:text-gray-400">{category.description}</p>
            </div>
          </div>

          <div class="space-y-6">
            {category.commands.map(command => (
              <div class="space-y-3">
                <h4 class="text-lg font-semibold text-primary-700 dark:text-primary-400">{command.title}</h4>
                <p class="text-gray-600 dark:text-gray-400 text-sm">{command.description}</p>
                <div class="bg-gray-100 dark:bg-gray-800 rounded-md p-3 font-mono text-sm overflow-x-auto">
                  {command.examples.map((example) => (
                    <div class="mb-1 last:mb-0">
                      <span class="text-primary-600 dark:text-primary-400 select-none">{example.startsWith('lumo') ? '$ ' : ''}</span>
                      <span>{example}</span>
                    </div>
                  ))}
                </div>
              </div>
            ))}
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
