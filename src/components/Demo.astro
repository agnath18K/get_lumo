---
import Terminal from './Terminal.jsx';
import { mainDemoCommands, demoFeatures } from '../utils/demoCommands.js';
---

<section class="section bg-gradient-to-b from-white to-gray-50 dark:from-gray-950 dark:to-terminal-dark">
  <div class="container">
    <div class="text-center mb-10 sm:mb-16">
      <span class="inline-block px-3 sm:px-4 py-1.5 rounded-full bg-secondary-100 dark:bg-secondary-900/30 text-secondary-800 dark:text-secondary-300 text-xs sm:text-sm font-medium mb-3 sm:mb-4">
        Interactive Demo
      </span>
      <h2 class="section-title">See Lumo CLI in Action</h2>
      <p class="section-description">
        Watch how Lumo CLI helps you navigate the terminal with natural language.
      </p>
    </div>

    <div class="flex flex-col lg:flex-row gap-6 sm:gap-8 lg:gap-12 items-center">
      <div class="lg:w-2/3 w-full">
        <div class="transform hover:scale-[1.01] transition-transform duration-300 shadow-xl">
          <Terminal
            client:only="react"
            commands={mainDemoCommands}
            autoPlay={true}
            loop={true}
            title="Lumo Demo"
          />
        </div>
      </div>

      <div class="lg:w-1/3 w-full space-y-6 sm:space-y-8 mt-8 lg:mt-0">
        <div class="space-y-2">
          <h3 class="text-xl sm:text-2xl font-bold">Try It Yourself</h3>
          <p class="text-sm sm:text-base text-gray-600 dark:text-gray-400">
            Lumo CLI makes complex terminal tasks simple with natural language commands.
          </p>
        </div>

        <div class="space-y-3 sm:space-y-4">
          {demoFeatures.map(feature => (
            <div class="bg-white dark:bg-gray-900 p-3 sm:p-4 rounded-lg border border-gray-200 dark:border-gray-800 flex items-start gap-3 sm:gap-4">
              <div class="text-primary-500 flex-shrink-0">
                <svg class="w-5 h-5 sm:w-6 sm:h-6" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5" stroke-linecap="round" stroke-linejoin="round">
                  {feature.title.includes('Natural Language') && (
                    <path d="M20.25 8.511c.884.284 1.5 1.128 1.5 2.097v4.286c0 1.136-.847 2.1-1.98 2.193-.34.027-.68.052-1.02.072v3.091l-3-3c-1.354 0-2.694-.055-4.02-.163a2.115 2.115 0 01-.825-.242m9.345-8.334a2.126 2.126 0 00-.476-.095 48.64 48.64 0 00-8.048 0c-1.131.094-1.976 1.057-1.976 2.192v4.286c0 .837.46 1.58 1.155 1.951m9.345-8.334V6.637c0-1.621-1.152-3.026-2.76-3.235A48.455 48.455 0 0011.25 3c-2.115 0-4.198.137-6.24.402-1.608.209-2.76 1.614-2.76 3.235v6.226c0 1.621 1.152 3.026 2.76 3.235.577.075 1.157.14 1.74.194V21l4.155-4.155" />
                  )}
                  {feature.title.includes('Terminal Agent') && (
                    <path d="M8.25 3v1.5M4.5 8.25H3m18 0h-1.5M4.5 12H3m18 0h-1.5m-15 3.75H3m18 0h-1.5M8.25 19.5V21M12 3v1.5m0 15V21m3.75-18v1.5m0 15V21m-9-1.5h10.5a2.25 2.25 0 002.25-2.25V6.75a2.25 2.25 0 00-2.25-2.25H6.75A2.25 2.25 0 004.5 6.75v10.5a2.25 2.25 0 002.25 2.25zm.75-12h9v9h-9v-9z" />
                  )}
                  {feature.title.includes('System Health') && (
                    <path d="M3 13.125C3 12.504 3.504 12 4.125 12h2.25c.621 0 1.125.504 1.125 1.125v6.75C7.5 20.496 6.996 21 6.375 21h-2.25A1.125 1.125 0 013 19.875v-6.75zM9.75 8.625c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v11.25c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V8.625zM16.5 4.125c0-.621.504-1.125 1.125-1.125h2.25c.621 0 1.125.504 1.125 1.125v15.75c0 .621-.504 1.125-1.125 1.125h-2.25a1.125 1.125 0 01-1.125-1.125V4.125z" />
                  )}
                </svg>
              </div>
              <div>
                <h4 class="font-semibold text-sm sm:text-base">{feature.title}</h4>
                <p class="text-xs sm:text-sm text-gray-600 dark:text-gray-400">{feature.description}</p>
              </div>
            </div>
          ))}
        </div>

        <div class="pt-2 sm:pt-4">
          <a href="/documentation" class="btn btn-primary w-full">
            View Documentation
            <svg class="h-4 w-4 ml-2" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
              <path d="M9 5l7 7-7 7" />
            </svg>
          </a>
        </div>
      </div>
    </div>
  </div>
</section>
