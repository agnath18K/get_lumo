---
import Layout from '../layouts/Layout.astro';
import Terminal from '../components/Terminal.jsx';
import CTA from '../components/CTA.astro';
import {
  CodeBracketIcon,
  CpuChipIcon,
  CloudIcon,
  LightBulbIcon,
  CommandLineIcon,
  ArrowPathIcon
} from '@heroicons/react/24/outline';

const demoCommands = [
  {
    input: 'lumo-code "Create a React component for a user profile"',
    output: `Creating React component for user profile...

// UserProfile.jsx
import React, { useState, useEffect } from 'react';
import './UserProfile.css';

const UserProfile = ({ userId }) => {
  const [user, setUser] = useState(null);
  const [loading, setLoading] = useState(true);

  useEffect(() => {
    fetchUserData(userId);
  }, [userId]);

  const fetchUserData = async (id) => {
    try {
      setLoading(true);
      const response = await fetch(\`/api/users/\${id}\`);
      const data = await response.json();
      setUser(data);
    } catch (error) {
      console.error('Error fetching user data:', error);
    } finally {
      setLoading(false);
    }
  };

  if (loading) return <div className="loading-spinner" />;

  return (
    <div className="user-profile">
      <div className="user-header">
        <img src={user.avatar} alt={user.name} className="user-avatar" />
        <h2>{user.name}</h2>
      </div>
      <div className="user-details">
        <p><strong>Email:</strong> {user.email}</p>
        <p><strong>Role:</strong> {user.role}</p>
        <p><strong>Joined:</strong> {new Date(user.joinDate).toLocaleDateString()}</p>
      </div>
    </div>
  );
};

export default UserProfile;

Component created successfully!`
  }
];

const features = [
  {
    title: 'Open-Source',
    description: 'Lumo Code is completely open-source, allowing for transparency, community contributions, and customization to fit your specific needs.',
    icon: CodeBracketIcon,
    color: 'from-blue-500 to-cyan-500'
  },
  {
    title: 'Custom AI Models',
    description: 'Use your preferred AI models through Ollama for local execution or OpenRouter for cloud-based models, giving you full control over your AI stack.',
    icon: CpuChipIcon,
    color: 'from-purple-500 to-indigo-500'
  },
  {
    title: 'Autonomous Coding',
    description: 'Let Lumo Code handle complex coding tasks autonomously, from creating components to refactoring code and implementing features.',
    icon: LightBulbIcon,
    color: 'from-amber-500 to-orange-500'
  }
];
---

<Layout title="Lumo Code - Autonomous Coding Assistant Extension" description="Lumo Code is an upcoming open-source extension for autonomous coding that supports custom AI models through Ollama or OpenRouter.">
  <!-- Hero Section -->
  <section class="relative py-20 overflow-hidden bg-gradient-to-b from-gray-50 to-white dark:from-gray-950 dark:to-gray-900">
    <!-- Background Pattern -->
    <div class="absolute inset-0">
      <div class="absolute inset-0 opacity-5 dark:opacity-10 bg-hero-pattern"></div>
    </div>

    <div class="container relative">
      <div class="text-center mb-10 sm:mb-16 max-w-3xl mx-auto">
        <div class="flex items-center justify-center gap-2 mb-3 sm:mb-4">
          <span class="inline-block h-3 w-3 bg-primary-500 rounded-full animate-pulse-slow"></span>
          <span class="inline-block px-3 sm:px-4 py-1.5 rounded-full bg-primary-100 dark:bg-primary-900/30 text-primary-800 dark:text-primary-300 text-xs sm:text-sm font-medium">
            Coming Soon
          </span>
        </div>
        <h1 class="text-3xl sm:text-4xl md:text-5xl font-bold mb-4 sm:mb-6 bg-clip-text text-transparent bg-gradient-to-r from-gray-900 to-gray-700 dark:from-white dark:to-gray-300">
          Lumo Code
        </h1>
        <p class="text-base sm:text-lg md:text-xl text-gray-600 dark:text-gray-400">
          An upcoming open-source extension for autonomous coding that works with your preferred AI models.
        </p>
      </div>

      <div class="flex flex-col lg:flex-row items-center gap-6 sm:gap-8 lg:gap-12">
        <div class="flex-1 space-y-6 sm:space-y-8">
          <div class="space-y-4 sm:space-y-6 animate-fade-in">
            <h2 class="text-2xl sm:text-3xl font-bold">
              Code with <span class="gradient-text">AI assistance</span> that respects your workflow
            </h2>
            <p class="text-sm sm:text-base md:text-lg text-gray-600 dark:text-gray-400">
              Unlike the terminal command agent mode in Lumo CLI, Lumo Code is a dedicated extension for coding tasks that integrates seamlessly with your development environment, providing autonomous coding capabilities while giving you complete control over your AI models and data.
            </p>

            <div class="flex flex-col sm:flex-row gap-3 sm:gap-4 pt-2 sm:pt-4">
              <a href="https://github.com/agnath18K/lumo" class="btn btn-secondary btn-lg w-full sm:w-auto" target="_blank">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2" fill="currentColor" viewBox="0 0 24 24">
