---
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FirebaseAnalytics from '../components/FirebaseAnalytics.astro';

interface Props {
	title?: string;
	description?: string;
	showHeader?: boolean;
	showFooter?: boolean;
	children?: any;
}

const {
	title = "Lumo CLI - AI-Powered Terminal Assistant",
	description = "Lumo CLI is an open-source terminal assistant that helps you navigate the command line with natural language.",
	showHeader = true,
	showFooter = true
} = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<meta name="description" content={description} />
		<meta name="theme-color" content="#00BFFF" />
		<meta name="color-scheme" content="dark light" />
		<meta property="og:title" content={title} />
		<meta property="og:description" content={description} />
		<meta property="og:type" content="website" />
		<meta property="og:url" content={Astro.url} />
		<meta property="og:image" content={new URL('/og-image.svg', Astro.url)} />
		<meta name="twitter:card" content="summary_large_image" />
		<title>{title}</title>
		<link rel="preconnect" href="https://fonts.googleapis.com">
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
		<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap" rel="stylesheet">
	</head>
	<body class="flex flex-col min-h-screen">
		{showHeader && <Header />}
		<main class="flex-grow pt-14 sm:pt-16">
			<slot />
		</main>
		{showFooter && <Footer />}
		<FirebaseAnalytics />
	</body>
</html>

<style>
	html,
	body {
		margin: 0;
		width: 100%;
		height: 100%;
	}
</style>

<script>
	// Theme initialization is now handled in Header.astro
</script>
